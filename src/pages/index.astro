<script is:inline>
  // Modal Functions - Global scope
  window.openModal = function(mediaUrl, mediaType, title) {
    const modal = document.getElementById('mediaModal');
    const modalContent = document.getElementById('modalContent');

    if (!modal || !modalContent) return;

    // Clear previous content
    modalContent.innerHTML = '';

    if (mediaType === 'video') {
      // Create video element for modal
      const video = document.createElement('video');
      video.controls = true;
      video.autoplay = true;
      video.className = 'max-w-full max-h-[90vh] w-auto h-auto';

      const source = document.createElement('source');
      source.src = mediaUrl;
      source.type = 'video/mp4';
      video.appendChild(source);

      modalContent.appendChild(video);
    } else {
      // Create image element for modal
      const img = document.createElement('img');
      img.src = mediaUrl;
      img.alt = title;
      img.className = 'max-w-full max-h-[90vh] w-auto h-auto object-contain';
      modalContent.appendChild(img);
    }

    // Show modal
    modal.classList.remove('hidden');
    modal.classList.add('flex');
    document.body.style.overflow = 'hidden';
  }

  window.closeModal = function() {
    const modal = document.getElementById('mediaModal');
    const modalContent = document.getElementById('modalContent');

    if (!modal || !modalContent) return;

    // Hide modal
    modal.classList.add('hidden');
    modal.classList.remove('flex');
    document.body.style.overflow = 'auto';

    // Clear content
    modalContent.innerHTML = '';
  }

  // Wait for DOM to be fully loaded
  document.addEventListener('DOMContentLoaded', function() {
    const creativesBtn = document.getElementById('creatives-btn');
    const copywritingBtn = document.getElementById('copywriting-btn');

    // Set initial state
    showCategory('creatives');

    // Add event listeners
    creativesBtn?.addEventListener('click', () => showCategory('creatives'));
    copywritingBtn?.addEventListener('click', () => showCategory('copywriting'));

    function showCategory(category) {
      // Hide all grids and descriptions
      const creativesGrid = document.getElementById('creatives-grid');
      const copywritingGrid = document.getElementById('copywriting-grid');
      const creativesDesc = document.getElementById('creatives-description');
      const copywritingDesc = document.getElementById('copywriting-description');

      creativesGrid?.classList.add('hidden');
      copywritingGrid?.classList.add('hidden');
      creativesDesc?.classList.add('hidden');
      copywritingDesc?.classList.add('hidden');

      // Reset button styles
      const allBtns = document.querySelectorAll('.category-btn');
      allBtns.forEach(btn => {
        btn.classList.remove('bg-primary', 'text-black');
        btn.classList.add('border', 'border-primary', 'text-primary');
      });

      // Show selected category
      if (category === 'creatives') {
        creativesGrid?.classList.remove('hidden');
        creativesDesc?.classList.remove('hidden');
        creativesBtn?.classList.add('bg-primary', 'text-black');
        creativesBtn?.classList.remove('border', 'border-primary', 'text-primary');
      } else {
        copywritingGrid?.classList.remove('hidden');
        copywritingDesc?.classList.remove('hidden');
        copywritingBtn?.classList.add('bg-primary', 'text-black');
        copywritingBtn?.classList.remove('border', 'border-primary', 'text-primary');
      }
    }

    // Close modal on escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        window.closeModal();
      }
    });

    // Close modal when clicking outside
    document.getElementById('mediaModal')?.addEventListener('click', (e) => {
      if (e.target === e.currentTarget) {
        window.closeModal();
      }
    });
  });
</script>

