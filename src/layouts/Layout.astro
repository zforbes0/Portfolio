---
import '../styles/global.css';
import Analytics from '@vercel/analytics/astro';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Personal Portfolio - Paid Media & SEO Marketing Specialist" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
  <meta charset="UTF-8" />
  <meta name="description" content={description} />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>

  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700;900&family=Inter:wght@300;400;500;600;700&family=Rajdhani:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="text-white font-inter antialiased overflow-x-hidden" style="background-image: linear-gradient(rgba(0, 0, 0, 0.65), rgba(0, 0, 0, 0.65)), url('/assets/Matrix Background.png'); background-size: cover; background-position: center; background-attachment: fixed;">
  <slot />
  <Analytics />
</body>
</html>

<style is:global>
  :root {
    --primary: #01FB87;
    --primary-dark: #01C060;
    --matrix-green: #01FB87;
    --matrix-dark: #01C060;
    --matrix-deep: #014D25;
  }

  .font-orbitron {
    font-family: 'Orbitron', monospace;
  }

  .font-inter {
    font-family: 'Inter', sans-serif;
  }

  .font-rajdhani {
    font-family: 'Rajdhani', sans-serif;
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: 'Rajdhani', sans-serif;
    font-weight: 600;
  }

  .text-primary {
    color: var(--primary);
  }

  .bg-primary {
    background-color: var(--primary);
  }

  .border-primary {
    border-color: var(--primary);
  }

  .matrix-text-shadow {
    text-shadow: 0 0 10px var(--primary);
  }

  .glass-morphism {
    background: rgba(0, 0, 0, 0.9);
    border: 1px solid #01FB8750;
  }

  .animate-slide-up {
    animation: slide-up 0.6s ease-out;
  }

  @keyframes slide-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Scrollbar styling */
  ::-webkit-scrollbar {
    width: 8px;
  }

  ::-webkit-scrollbar-track {
    background: #111;
  }

  ::-webkit-scrollbar-thumb {
    background: var(--primary);
    border-radius: 4px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: var(--primary-dark);
  }
</style>